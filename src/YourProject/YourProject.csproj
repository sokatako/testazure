<Target Name="pipelinePreDeployCopyAllFilesToOneFolder">
  <ItemGroup>
    <_CustomFiles Include="$(MSBuildProjectDirectory)\**\*" Exclude="$(MSBuildProjectDirectory)\bin\**\*;$(MSBuildProjectDirectory)\obj\**\*" />
  </ItemGroup>
  <Copy SourceFiles="@(_CustomFiles)" DestinationFolder="$(PackageTempDir)\%(RecursiveDir)" />
</Target>
